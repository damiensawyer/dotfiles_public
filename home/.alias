#!/bin/bash
alias n="cd ~/code/notes"
alias v="cd ~/code/vimrc"
alias c="cd  ~/code/"
alias cb="cd ~/code/codebriefcase"
# alias gh="cd ~/code/X20.CQRS/src/CQRS/integratorHosts/genericHost"
alias dc="cd ~/code/DCAP"
alias dotf="cd ~/.dotfiles"
alias gp='~/gp.sh'

alias ll='ls -alh'
# alias ls='exa -alh --git' # leave ls as standard so that we can use it in bash scripts
alias lst='eza -alh --git --tree --level=5 --color=always'
alias lstp='eza -alh --git --tree --level=5 --color=always | less -R'
alias lstpg='eza -alh --git --tree --level=5 --color=always --git-ignore | less -R'
alias bat='batcat'

unalias ag 2>/dev/null

# need NVM install obviously
nvm alias default 20.16.0
nvm use default;

# this is notes for video: http://www.youtube.com/watch?v=fKP0FLp3uW0
# copy/paste for linux machines (Mac style).
# Can use with cat myfile.txt | pbcopy
alias pbcopy='xclip -selection clipboard'	# copy to clipboard, ctrl+c, ctrl+shift+c
alias pbpaste='xclip -selection clipboard -o'	# paste from clipboard, ctrl+v, ctrl+shift+v
alias pbselect='xclip -selection primary -o'	# paste from highlight, middle click, shift+insert


